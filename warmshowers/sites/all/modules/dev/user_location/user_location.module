        $start_level++;
      }
      $php_stmt .= '[$xml_elem[\'tag\']] = $xml_elem[\'value\'];';
      eval($php_stmt);
    }
  }

 
  $res = null;
  foreach ($params['GEONAMES'] as $key => $value) {
