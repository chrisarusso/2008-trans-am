	    $res = array('latitude' => floatval($value['latitude']), 'longitude' => floatval($value['LNG']), 'postal_code' => $value['POSTALCODE'], 'city' => $value['NAME'], 'source'=>6, 'geocoding_source'=>'geonames_placename');
